<div class="post-list-view">
    <div class="post-header">
        <p class="h3">{{ post.title }}</p>
        {% if post.tags|length > 0 %}
            <div class="tags">
                {% for tag in post.tags %}
                    <label class="label label-success">{{ tag.name }}</label>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="content">
        {{ post.getShortContent }}
    </div>
    <div class="post-footer">
        <div class="author">
            Author: <a href="{{ path('view-author', {'author': post.author.id}) }}">{{ post.author.name }}</a>
        </div>
        <div class="rating">
            <span class="rating-counter">{{ post.rating }}</span>
        </div>
        <div class="comments">
            Comments: <b>{{ post.comments|length }}</b>
        </div>
        <div class="publication-date">
            Publication date: <span class="date">{{ post.createdAt }}</span>
        </div>
    </div>
    <div class="link">
        <a href="{{ path('view-post', {'post': post.id}) }}">Read more</a>
    </div>
</div>