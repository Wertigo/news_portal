{{ form_start(form, {'attr': {'class': 'form-horizontal col-md-8'}}) }}

<div class="form-group">
    <label class="control-label">Title</label>

    {{ form_widget(form.title, {
        'attr': {
            'class': 'form-control',
            'required': true,
            'placeholder': 'Title'
        }
    }) }}

    {% if form.title.vars.valid != true %}
        <div class="alert alert-danger">
            {{ form_errors(form.title) }}
        </div>
    {% endif %}
</div>

<div class="form-group">
    <label class="control-label">Tags</label>

    {{ form_widget(form.post_tags, {'attr': { 'class': 'form-control'}}) }}

    {% if form.post_tags.vars.valid != true %}
        <div class="alert alert-danger">
            {{ form_errors(form.post_tags) }}
        </div>
    {% endif %}
</div>

<div class="form-group">
    <label class="control-label">Content</label>

    {{ form_widget(form.content, {
        'attr': {
            'class': 'form-control',
            'required': true,
            'placeholder': 'Content'
        }
    }) }}

    {% if form.content.vars.valid != true %}
        <div class="alert alert-danger">
            {{ form_errors(form.content) }}
        </div>
    {% endif %}
</div>

<div class="form-group">
    <input type="submit" class="btn btn-primary" value="Save draft" />
</div>

{{ form_end(form) }}