{% extends 'base.html.twig' %}

{% block title %}Post: {{ post.id }}{% endblock %}

{% block body %}
    <div class="post-view">
        <h1 class="h3">{{ post.title }}</h1>
        <div class="post-content">
            {{ post.content|raw }}
        </div>
        <div class="post-tags">
            {% for  tag in post.tags %}
                <label class="label label-success">{{ tag.name }}</label>
            {% endfor %}
        </div>
    </div>
{% endblock %}
