{% extends 'base.html.twig' %}

{% block title %}Post: {{ post.id }}{% endblock %}

{% block body %}
    <div class="post-view">
        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ post.title }}</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ post.content|escape }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
