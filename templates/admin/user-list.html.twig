{% extends 'base.html.twig' %}

{% block title %}Admin - User list{% endblock %}

{% block body %}
    <h1 class="h3">Admin - User list</h1>
    <div class="admin-user-list">
        {% if pagination.getTotalItemCount > 0 %}
            <div class="filter-form">
                {{ form_start(form, {
                    'method': 'GET',
                    'action': path('admin-user-list'),
                    'attr': {'class': 'form-horizontal col-md-12'}}
                ) }}

                <form action="{{ path('admin-user-list') }}" class="form-horizontal" method="get">
                    <div class="form-group">
                        <label>Email</label>
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}

                        {% if form.email.vars.valid != true %}
                            <div class="alert alert-danger">
                                {{ form_errors(form.email) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Filter" class="btn btn-primary" />
                    </div>
                </form>
                {{ form_end(form) }}
            </div>

            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in pagination %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.textStatus }}</td>
                        <td>
                            {% if app.user.id != user.id %}
                                {% if user.isRegistered %}
                                    <a href="{{ path('admin-block-user', {'user': user.id}) }}">Block</a>
                                    <a href="{{ path('admin-activate-user', {'user': user.id}) }}">Activate</a>
                                {% elseif user.isActive %}
                                    <a href="{{ path('admin-block-user', {'user': user.id}) }}">Block</a>
                                {% else %}
                                    <a href="{{ path('admin-activate-user', {'user': user.id}) }}">Activate</a>
                                {% endif %}
                            {% else %}
                                <span>You can't block yourself</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        {% include 'utils/pagination.html.twig' %}
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function() {
            // Called by Select2 to determine autocomplete request
            // query string parameters
            const getAjaxListData = function(params) {
                return {
                    q: params.term,
                    p: params.page
                };
            };

            // Turn the plain SELECT input into a Select2 element
            $('#user_list_search_email').select2({
                placeholder: 'Search for a user',
                ajax: {
                    url: '{{ path('api-get-all-users') }}',
                    dataType: 'json',
                    delay: 250,
                    data: getAjaxListData,
                    cache: true,
                    tags: true
                }
            });
        });
    </script>
{% endblock %}