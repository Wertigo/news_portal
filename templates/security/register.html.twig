{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="form-group">
        <h1 class="h3">Registration</h1>
    </div>

    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal col-md-4'}}) }}

    <div class="form-group">
        <label class="control-label">Name</label>

        {{ form_widget(registrationForm.name, {
            'attr': {
                'class': 'form-control',
                'required': false,
                'placeholder': 'Name'
            }
        }) }}

        {% if registrationForm.name.vars.valid != true %}
            <div class="alert alert-danger">
                {{ form_errors(registrationForm.name) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        <label class="control-label">Email</label>

        {{ form_widget(registrationForm.email, {
            'attr': {
                'class': 'form-control selectpicker',
                'required': 'required',
                'placeholder': 'Email*'
        }}) }}

        {% if registrationForm.email.vars.valid != true %}
            <div class="alert alert-danger">
                {{ form_errors(registrationForm.email) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        <label class="control-label">Password</label>

        {{ form_widget(registrationForm.plainPassword, {
            'attr': {
                'class': 'form-control',
                'required': 'required',
                'placeholder': 'Password*'
        }}) }}

        {% if registrationForm.plainPassword.vars.valid != true %}
            <div class="alert alert-danger">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Register" />
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}